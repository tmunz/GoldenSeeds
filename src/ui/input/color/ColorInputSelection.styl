.color-input-selection {
  position: absolute;
  top: 10px;
  left: 10px;
  bottom: 10px;
  right: 10px;
  display: grid;
  grid-gap: 2px;
  grid-template-columns: repeat(auto-fit, minmax(18px, 1fr));

  .color-input-cell {
    width: 100%;
    height: 100%;
    cursor: pointer;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.4);
  }
}