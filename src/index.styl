@import "assets/font/simple-light/stylesheet.css";

body {
  font-family: simplesimple_light, sans-serif;
  letter-spacing: 2px;
  font-size: 12px;
  margin: 0;
  padding: 0;
  background: unquote('rgb(var(--backgroundColor))');
  color: var(--textColor);
  transition: .4s ease-in-out all;
}

h1 {
  letter-spacing: 14px;
  font-weight: 200;
  font-size: 16px;
  line-height: 1.4em;
}

h2 {
  letter-spacing: 2px;
  font-weight: 200;
  font-size: 16px;
  line-height: 1.4em;
}

input[type="text"] {
  font-size: 14px;
}

::selection {
  color: var(--actionColor);
  background-color: var(--accentColor);
}

script {
  display: none;
}

a,
button,
input[type="button"],
.action {
  text-transform: uppercase;
  appearance: none;
  font-weight: inherit;
  font-family: inherit;
  font-style: inherit;
  font-weight: inherit;
  letter-spacing: inherit;
  word-spacing: inherit;
  background: none;
  border: none;
  padding: 0;
  cursor: pointer;
  color: var(--actionColor);
  text-decoration: none;
  transition: color .4s ease-in-out;

  &:hover {
    text-shadow: 0 0 2px var(--accentColor);
    color: var(--accentColor);
  }
}

.error {
  fill: var(--errorColor);
  color: var(--errorColor);
}

.polaroid {
  background: unquote('rgb(var(--backgroundColor), 0.3)');

  &>.polaroid-picture {
    position: relative;
    box-sizing: border-box;
    border: 1px solid var(--textColor);
    width: 100%;
    min-width: 120px;
    aspect-ratio: 1 / 1;
  }
}

* {
  scrollbar-width: thin;
  scrollbar-color: var(--textColor) unquote('rgb(var(--backgroundColor))');

  &::hover {
    scrollbar-color: var(--accentColor) unquote('rgb(var(--backgroundColor))');
  }
}

*::-webkit-scrollbar {
  width: 4px;
  height: 4px;
}

*::-webkit-scrollbar-track {
  background: unquote('rgb(var(--backgroundColor))');
  border-radius: 5px;
}

*::-webkit-scrollbar-thumb {
  background: linear-gradient(0deg, transparent 0%, var(--textColor) 50%, transparent 100%);
  border-radius: 5px;
}

*::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(0deg, transparent 0%, var(--accentColor) 50%, transparent 100%);
}