@import "./base.styl";
html,
body {
  font-family: Helvetica, sans-serif;
  font-size: 12px;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  background: $color-background;
  color: $color-text;
}

script {
  display: none;
}

a {
  color: $color-link;
  text-decoration: none;
  display: block;
  text-align: right;
  cursor: pointer;
  &:hover {
    hover();
    color: $color-accent;
  }
}

.active {
  color: $color-accent!important;
}