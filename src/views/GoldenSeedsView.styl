@import "../base.styl";

.golden-seeds-view {
  width: 100%;
  height: 100%;
  .canvas {
    position: fixed;
    top: 50%;
    left: 50%;
    transition: left 1.2s ease;
    transform: translate(-50%, -50%);
  }
  .overlay {
    position: absolute;
    padding: 20px;
    .colapsable {
      overflow: hidden;
      transition: height 0.6s;
    }
    &.overlay-container, .overlay-container {
      &>* {
        margin: 6px 0;
      }
    }
    &.overlay-config {
      top: 0;
      left: 0;
      .config-mode-selector {
        text-align: left;
        margin-left: 45px;
      }
    }
    &.overlay-export {
      position fixed;
      top: 0;
      right: 0;
    }
    &.overlay-animation { 
      position fixed;
      right: 0;
      bottom: 0;
    }
  }
}