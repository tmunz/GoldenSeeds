.font-editor {

  .font-display {
    .font-canvas {
      position: absolute;
      top: 0px;
      left: 0px;
      bottom: 0px;
      right: 0px;
      width: 120px;
      height: 120px;
      overflow: hidden;

      path {
        fill: var(--textColor);
      }
    }

    button {
      position: absolute;
      top: 10px;
      left: 10px;
      bottom: 10px;
      right: 10px;
      display: inline-block;
      appearance: none;
      text-transform: uppercase;
      outline: none;
      border: none;
      background: none;
      cursor: pointer;
      box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.4);
    }
  }
}