.editor {
  overflow: auto;
  direction: rtl;
  width: 100%;

  .content-wrapper {
    direction: ltr;
  }

  .stage-header {

    &:hover>.controls {
      opacity: 1;
    }

    &>.controls {
      display: inline-block;
      opacity: 0;
      transition: opacity .8s;
    }

    &>button {
      padding: 8px;
      display: inline-block;
      vertical-align: super;
      margin: 0;
    }
  }

  .stage {
    /* border-bottom: 1px solid var(--accentColor); */

    .stage-type-selector {
      grid-column: span 2;
    }

    .stage-content {
      width: 260px;
      padding-bottom: 40px;

      .stage-group {

        h2 {
          margin-top: 40px;
        }

        .stage-group-content {
          display: grid;
          grid-template-columns: 1fr 1fr;
          gap: 0 20px;

          .editor-item:has(.input) {
            grid-column: span 2;
          }
        }
      }
    }
  }
}