.editor {
  overflow: auto;
  direction: rtl;

  .content-wrapper {
    direction: ltr;
  }

  &::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }

  &::-webkit-scrollbar-track {
    background: var(--backgroundColor);
    border-radius: 5px;
  }

  &::-webkit-scrollbar-thumb {
    background: var(--textColor);
    border-radius: 5px;
  }

  &::-webkit-scrollbar-thumb:hover {
    background: var(--accentColor);
  }

  .stage-header {

    &:hover>.controls {
      opacity: 1;
    }

    &>.controls {
      display: inline-block;
      opacity: 0;
      transition:opacity .8s;
    }

    &>h1 {
      padding: 8px;
      display: inline-block;
      vertical-align: super;
      margin: 0;
    }
  }

  .stage {
    // border-bottom: 1px solid var(--accentColor);
    padding-bottom: 10px;
    margin-bottom: 10px;
  }

  .editor-item {
    &>* {
      display: inline-block;

      &:first {
        width: 80px;
      }
    }
  }
}