.editor {
  .stage-header {
    display: flex;
    justify-content: space-between;
    align-content: center;
    &.edit-mode {
      color: var(--accentColor);
    }
    &>* {
      flex: 1;
    }
    h1 {
      flex: 9999999;
      letter-spacing: 10px;
      font-weight: 200;
      font-size: 16px;
      margin: 0;
      padding:  0px 0px 8px 20px;
      align-self: flex-end;
    }
  }
  .stage {
    margin-bottom: 30px;
    border-bottom: 1px solid var(--accentColor);
  }
}