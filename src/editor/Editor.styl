.editor {
  .stage {

    h1 {
      font-weight: 100;
      padding: 36px 0 4px;
      font-size: 16px;
    }

    &.background>h1 {
      padding-top: 6px;
      letter-spacing: 11px;
    }

    &.grid>h1 {
      letter-spacing: 51.5px;
    }

    &.drawer>h1 {
      letter-spacing: 26px;
    }

    .edit-mode {
      color: var(--accentColor);
    }
  }
}