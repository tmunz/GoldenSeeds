.golden-seeds-view {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  &>.canvas {
    position: relative;
    transition: left 1.2s ease;
    transform: translate(-50%, 0);
    z-index: -1;
  }

  &>.sidebar {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    padding-left: 20px;
    padding-top: 20px;
    padding-right: 20px;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: flex-start;
    align-content: flex-start;
    transition: all 0.5s ease-in-out;
    clip-path: circle(80%);

    &.hidden {
      clip-path: circle(25px at 33px 42px);
    }

    &>.sidebar-content {
      &:before {
        content: "";
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        backdrop-filter: blur(4px);
        /*mask: linear-gradient(-90deg, transparent, black 80%);*/
      }

      &>.actions {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: flex-start;
        align-items: flex-start;
        align-content: flex-start;
        margin-bottom: 20px;
      }

      &>.editor {
        margin-left: -10px;
        padding-left: 10px;
      }
    }
  }

  &>.toolbar {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    padding-top: 20px;
    padding-right: 10px;
    padding-left: 20px;
    padding-bottom: 100px;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: flex-end;
    align-content: flex-start;

    &:before {
      content: "";
      position: absolute;
      z-index: -1;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      backdrop-filter: blur(4px);
      /* mask: linear-gradient(90deg, transparent, black 80%);*/
    }

    &>* {
      overflow: auto;
    }
  }

  &>.themer {
    position: absolute;
    bottom: 20px;
    right: 20px;

    h1 {
      text-align: right;
    }
  }
}