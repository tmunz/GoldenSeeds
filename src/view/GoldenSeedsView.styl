.golden-seeds-view {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  &>.canvas {
    position: relative;
    transition: left 1.2s ease;
    transform: translate(-50%, 0);
  }

  &>.editor {
    position: absolute;
    top: 20px;
    left: 10px;
    bottom: 20px;
    padding-left: 20px;
  }

  &>.toolbar {
    position: absolute;
    top: 20px;
    right: 20px;
    bottom: 20px;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: flex-end;
    align-content: flex-start;
    &>.actions {
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
      justify-content: flex-start;
      align-items: flex-start;
      align-content: flex-start;
    }
    &>.preconfigs {
      margin-top: 20px;
      overflow: auto;
    }
  }

  &>.themer {
    position: absolute;
    bottom: 20px;
    right: 20px;

    h1 {
      text-align: right;
    }
  }
}