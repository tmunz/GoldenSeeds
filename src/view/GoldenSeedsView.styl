.golden-seeds-view {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  &>* {
    position: absolute;
    padding: 20px;
    &.canvas {
      top: 50%;
      left: 50%;
      transition: left 1.2s ease;
      transform: translate(-50%, -50%);
    }
    &.editor {
      top: 0;
      left: 10px;
      bottom: 0;
    }
    &.toolbar {
      top: 0;
      right: 0;
    }
    &.themer {
      bottom: 0;
      right: 0;
      h1 {
        text-align: right;
      }
    }
  }
}